{
	"manifest_version": 2,
	"name": "Reader Mode",
	"version": "0.2",
	"description": "A simple extension to increase readability of the webpage",

	"content_scripts": [
		{
			"matches": [
				"<all_urls>"
			],
			"js": ["js/content.js", "js/jquery-3.1.1.min.js"]
		}
	],

	"permissions": [
		"activeTab"
	],

	"browser_action": {
		// "default_icon": "img/icon_19.png",
		"default_popup": "popup.html"
	}
}